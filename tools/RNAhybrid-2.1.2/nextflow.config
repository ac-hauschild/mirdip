params {
  rnahybrid_exe = "/gpfs/lb/mirdip5/tools/RNAhybrid-2.1.2/src/RNAhybrid"
  utrs_per_process = 100000
  mirs_per_process = 1
  utrs = "/gpfs/lb/mirdip5/utrs/utrs_hg38_removed_unavailables_and_double_dash.fa"
  mirs = "/gpfs/lb/mirdip5/mirbase_human_plus_78_from_mirgenedb.fa"
}

profiles {
    ijcluster {
        process {
	    executor = 'slurm'
       	    queue = 'dque'
	    cpus = 1
    	    memory = 256.MB
    	    errorStrategy = 'retry'
    	    withLabel: mem_large { memory = 48.GB }
    	    withLabel: mem_xlarge { memory = 64.GB }
	    withLabel: mem_xxlarge { memory = 128.GB }
	}
    }
}